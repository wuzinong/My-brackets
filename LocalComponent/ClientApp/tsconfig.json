{
  "compilerOptions": {
    "outDir": "./js/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "removeComments": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es7",
      "dom.iterable",
      "scripthost"
    ],
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "./cas-ui/**/*",
    "support.d.ts",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}